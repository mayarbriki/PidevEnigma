{% extends 'base-back.html.twig' %}

{% block title %}Livraison{% endblock %}

{% block body %}
<main id="main" class="main">
    <h1>Livraison</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livraison.id }}</td>
            </tr>
            <tr>
                <th>Transport</th>
                <td>{{ livraison.type }}</td>
            </tr>
            <tr>
                <th>Livreur</th>
                <td>{{ livraison.artlib }}</td>
            </tr>
            <tr>
                <th>Article</th>
                <td>{{ livraison.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_livraison_index') }}">Back to list</a>
    <a href="{{ path('app_livraison_edit', {'id': livraison.id}) }}">Edit</a>
    {{ include('livraison/_delete_form.html.twig') }}
 </main>
{% endblock %}
