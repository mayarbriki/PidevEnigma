{% extends 'base.html.twig' %}

{% block title %}Transport index{% endblock %}

{% block body %}
    <h1>Transport index</h1>

    <!-- Search Form -->
    <form class="search-form" method="GET" action="{{ path('app_transport_index') }}">
        <input type="text" name="query" placeholder="Search..." value="{{ app.request.query.get('query') }}">
        <button type="submit">Search</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th><a href="{{ path('app_transport_index', {'sort_by': 'id', 'order': order == 'ASC' ? 'DESC' : 'ASC' }) }}">Id</a></th>
                <th><a href="{{ path('app_transport_index', {'sort_by': 'type', 'order': order == 'ASC' ? 'DESC' : 'ASC' }) }}">Type</a></th>
                <th><a href="{{ path('app_transport_index', {'sort_by': 'marque', 'order': order == 'ASC' ? 'DESC' : 'ASC' }) }}">Marque</a></th>
                <th><a href="{{ path('app_transport_index', {'sort_by': 'matricule', 'order': order == 'ASC' ? 'DESC' : 'ASC' }) }}">Matricule</a></th>
                <th><a href="{{ path('app_transport_index', {'sort_by': 'anneefab', 'order': order == 'ASC' ? 'DESC' : 'ASC' }) }}">Ann√©eFab</a></th>
                <th><a href="{{ path('app_transport_index', {'sort_by': 'etat', 'order': order == 'ASC' ? 'DESC' : 'ASC' }) }}">Etat</a></th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transport in transports %}
            <tr>
                <td>{{ transport.id }}</td>
                <td>{{ transport.type }}</td>
                <td>{{ transport.marque }}</td>
                <td>{{ transport.matricule }}</td>
                <td>{{ transport.anneefab ? transport.anneefab|date('Y-m-d') : '' }}</td>
                <td>{{ transport.etat }}</td>
                <td>
                    <a href="{{ path('app_transport_show', {'id': transport.id}) }}">show</a>
                    <a href="{{ path('app_transport_edit', {'id': transport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Pagination 
    {% if paginator.getTotalItemCount() > 0 %}
        <nav aria-label="Pagination">
            <ul class="pagination">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query|merge({'page': currentPage - 1})) }}">Previous</a>
                    </li>
                {% endif %}
                {% for page in 1..paginator.getTotalItemCount() %}
                    <li class="page-item {% if page == currentPage %}active{% endif %}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query|merge({'page': page})) }}">{{ page }}</a>
                    </li>
                {% endfor %}
                {% if currentPage < paginator.getTotalItemCount() %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query|merge({'page': currentPage + 1})) }}">Next</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}#}

    <a href="{{ path('app_transport_new') }}">Create new</a>
{% endblock %}
