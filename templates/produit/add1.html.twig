{% extends 'base-back.html.twig' %}
{% block title %}Produit{% endblock %}

{% block body %}
<div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    
                    <p class="card-description"> Basic form elements </p>
                    {{ form_start(formProduit , {'attr': {'novalidate':'novalidate'}} ) }}
                    <form class="forms-sample">
					<div class="form-group">
                        {{ form_row(formProduit.nom, {'label':'nom' ,'attr':{'placeholder': 'Nom...', 'class':'form-control'}}) }}</div>
                      <div class="form-group">
                        {{ form_row(formProduit.description, {'label':' description' ,'attr':{'placeholder': 'description...', 'class':'form-control'}}) }}</div>
						<div class="form-group">
                         {{ form_row(formProduit.quantite, {'label':' quantite' ,'attr':{'placeholder': 'quantite...', 'class':'form-control'}}) }}</div>
						<div class="form-group">
                        {{ form_row(formProduit.prix, {'label':'prix' ,'attr':{'placeholder': 'prix...', 'class':'form-control'}}) }}</div>
						<div class="form-group">
                        {{ form_row(formProduit.image, {'label':'image' ,'attr':{'placeholder': 'image...', 'class':'form-control'}}) }}</div>
					
						<div class="form-group">
                        {{ form_row(formProduit.Categorys, {'label':'Categorys' ,'attr':{'placeholder': 'Categorys...', 'class':'form-control'}}) }}
						</div>
                      
					 
                      <button type="submit" class="btn btn-primary mr-2" >Ajouter Produit</button>
                      {{form_end(formProduit)}}
                      
                    </form>
                     
                    </div>
                </div>
            </div>
			  {%endblock%}