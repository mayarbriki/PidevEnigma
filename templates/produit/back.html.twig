{% extends 'base-back.html.twig' %}

{% block title %}E-FIT!{% endblock %}

{% block body %}
 <main id="main" class="main">

    <div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">

<div class="panel-header panel-header-sm">
            </div>
            <div class="content">

                <div class="row">

                    <div class="col-md-12">
                                                                                            

                        <div class="card">
                            <div class="card-header">

                                <h4 class="card-title"> Simple Table</h4>
                            </div>
                            <div class="card-body">

                                <div class="table-responsive">

                                    <table class="table">

                                        <thead class=" text-primary">
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Nom
                                            </th>
                                            <th>
                                                Description
                                            </th>
                                             <th>
                                                Quantite
                                            </th>
                                            <th class="text-right">
                                                Prix
                                            </th>
                                            <th class="text-right">
                                                category
                                            </th>
                                             <th class="text-right">
                                                Image
                                            </th>
                                        
                                             <th class="text-right">
                                              Delete
                                            </th>
                                             <th class="text-right">
                                                Update
                                            </th>
                                        </thead>

                                        <tbody>
                                                      {% for i in Produit %}

                                            <tr>
                                                <td>
                                                    {{i.ID}}
                                                </td>
                                                <td>
                                                   {{i.Nom}}
                                                </td>
                                                <td>
                                                    {{i.Description}}
                                                </td>

                                                 <td>
                                                    {{i.quantite}}
                                                </td>
                                              <td>
                                                    {{i.Prix}}
                                                </td>
                                                <td>
                                                    {{i.Categorys}}
                                                </td>
                                                 
                                                 <td><img src="../uploads/produits/{{ i.Image }}" class="img-fluid" height="100" width="125"></td>
                                                    
                                                
                                                 <td>
                                                    <a href="{{ path('delete', {id:i.ID}) }}">Delete </a>
                                                </td>
                                                 <td>
                                                    <a href="{{ path('update', {id:i.ID}) }}">Update </a>
                                                </td>
                                            </tr>
                                           {% endfor%}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                           
                            
                </div>
            </div>
</section>

  </main>
{% endblock %}