<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<canvas id="myChart" width="400" height="400"></canvas>

<script>
	var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
type: "line",
data: {
labels: {{ labels|json_encode|raw }},
datasets: [
{
label: "TND",
data: {{ data|json_encode|raw }},
fill: false,
borderColor: "rgba(0, 178, 26, 1)",
tension: 0.1
}
]
},
options: {
scales: {
y: {
ticks: {
beginAtZero: true
}
}
},
plugins: {
tooltip: {
enabled: true,
mode: 'index',
intersect: true,
callbacks: {
title: function (tooltipItems) { // Display the label of the hovered item as tooltip title
return tooltipItems[0].label;
},
label: function (tooltipItem, data) { // Display the value of the hovered item as tooltip label
return tooltipItem.formattedValue + ' TND';
}
}
}
}
}
});
</script>
